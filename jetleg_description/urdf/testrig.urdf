<?xml version="1.0"?>
<robot name="jetleg_testrig">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="red_transluscent">
        <color rgba="1 0 0 0.25"/>
    </material>
    <material name="white_transluscent">
        <color rgba="1 1 1 0.25"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.25 1"/>
            </geometry>
            <material name="red_transluscent"/> 
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.25 1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1000"/>
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100"/>
        </inertial>
    </link>

    <joint name="base_to_gantry" type="fixed">
        <origin rpy="0 0 0" xyz="0 -0.8 0.4"/>
        <parent link="base_link"/>
        <child link="gantry"/>
    </joint>

    <link name="gantry">
        <visual>
            <geometry>
                <box size="0.05 1.6 0.05"/>
            </geometry>
            <material name="white_transluscent"/> 
        </visual>
        <collision>
            <geometry>
                <box size="0.05 1.5 0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="100"/>
            <inertia ixx="10" ixy="0" ixz="0" iyy="10" iyz="0" izz="10"/>
        </inertial>
    </link>

    <joint name="gantry_to_base2" type="fixed">
        <origin rpy="0 0 0" xyz="0 -0.8 -0.4"/>
        <parent link="gantry"/>
        <child link="base_two"/>
    </joint>

    <link name="base_two">
        <visual>
            <geometry>
                <box size="0.5 0.25 1"/>
            </geometry>
            <material name="red_transluscent"/> 
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.25 1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1000"/>
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100"/>
        </inertial>
    </link>

    <joint name="gantry_to_mount" type="fixed">
        <origin rpy="0 0 0" xyz="0 0.0 0"/>
        <parent link="gantry"/>
        <child link="mount"/>
    </joint>

    <link name="mount">

        <visual>
            <geometry>
                <cylinder length="0.24" radius="0.08"/>
            </geometry>
            <material name="white"/> 
            <origin rpy="0 0.8 0" xyz="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.24" radius="0.08"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="100"/>
            <inertia ixx="10" ixy="0" ixz="0" iyy="10" iyz="0" izz="10"/>
        </inertial>
    </link>

</robot>